export default function handler(req, res) {
  if (req.method === 'GET') {
    res.status(200).json({ message: 'API funcionando corretamente ðŸš€' });
  } else {
    res.setHeader('Allow', ['GET']);
    res.status(405).json({ error: `MÃ©todo ${req.method} nÃ£o permitido` });
  }
}
